{
  "name": "<%= name %>",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "description": "<%= description %>",
  "scripts": {
    "lint": "eslint .",
    "lint:affected": "eslint $(git diff --name-only master -- packages/*/src | grep  -E \"(.js$|.jsx$|.ts$|.tsx$)\")",
    "test": "lerna run test",
    "test:affected": "lerna run test --since master",
    "build": "lerna run build --include-dependencies",
    "start": "lerna run start --parallel"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  }
}
